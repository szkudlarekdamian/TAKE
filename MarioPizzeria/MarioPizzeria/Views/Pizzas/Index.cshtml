@model IEnumerable<MarioPizzeria.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<h1>Pizzas</h1>
<p>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create")'">Add new</button>
</p>
<form asp-action="Search">
    <div class="form-horizontal">
        <div class="form-group">
            <hr/>
            <div class="col-md-12">
                <input id="SearchText" name="SearchText" placeholder="Type pizza to search for ..." type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crust)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crust)
            </td>
            <td>
                <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Create", "PizzaIngredients", new {id=@item.Id })'">Ingredients</button>

                <button type="button" style="margin-left:15px; width:75px" class="btn btn-info" onclick="location.href='@Url.Action("Edit", new {id=@item.Id })'">Edit</button>
                <button type="button" style="margin-left:15px; width:75px" class="btn btn-info" onclick="location.href='@Url.Action("Details", new {id=@item.Id })'">Details</button>
                <button type="button" style="margin-left:15px; width:75px" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new {id=@item.Id })'">Delete</button>
            </td>
        </tr>
        }
    </tbody>
</table>
